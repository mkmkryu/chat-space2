.leftside
  .left-header
    .left-header__name
      =current_user.name
    =link_to edit_user_path(current_user) do
      = fa_icon'cog', class: 'icon'
    =link_to new_group_path do
      = fa_icon 'pencil-square-o', class: 'icon'
        
  .left-bottom
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .left-bottom__name
          = group.name
        .left-bottom__message
          = group.show_last_message


.rightside
  .right-top
    =link_to "groups/1/edit", class: "right-top__button" do
      Edit
    .right-top__group
      test-group
    .right-top__info
      Member : test-user
  .right-midle
    = render partial: 'message', collection: @messages

        

  .text
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'text__message', placeholder: 'type a message'
      .text__image
        = f.label :image, class: 'text__image__icon' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'text__send'